<script>
  document.addEventListener("DOMContentLoaded", function () {
    const btn = document.getElementById("startBtn");
    if (btn) {
      btn.addEventListener("click", startBirthday);
    }
  });



  function startBirthday() {
    document.getElementById("intro").style.display = "none";
    document.getElementById("birthday").style.display = "block";

    const audio = document.getElementById("bgMusic");
    audio.play().catch(err => console.log("Autoplay b·ªã ch·∫∑n:", err));

    launchConfetti(100);
    showMessageLines(); // üëà g·ªçi hi·ªáu ·ª©ng hi·ªán ch·ªØ
  }

  function showMessageLines() {
    const lines = document.querySelectorAll(".message p");
    lines.forEach((line, i) => {
      setTimeout(() => line.classList.add("show"), i * 1000);
    });
  }

  function launchConfetti(count = 80) {
    const container = document.querySelector(".confetti");
    const colors = [0, 30, 60, 120, 180, 210, 260, 300, 330];
    for (let i = 0; i < count; i++) {
      const piece = document.createElement("div");
      piece.className = "piece";
      piece.style.setProperty("--x", Math.random() * 100 + "vw");
      piece.style.setProperty("--r", Math.random() * 180 + "deg");
      piece.style.setProperty("--d", (6 + Math.random() * 4) + "s");
      piece.style.setProperty("--delay", Math.random() * 0.8 + "s");
      piece.style.setProperty("--h", colors[Math.floor(Math.random() * colors.length)]);
      container.appendChild(piece);
      setTimeout(() => piece.remove(), 12000);
    }
  }
</script>
